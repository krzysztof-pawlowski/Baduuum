<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="mariusz">
        <createTable tableName="client">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="band_name" type="varchar(200)"/>
            <column name="phone_number" type="varchar(200)"/>
            <column name="email" type="varchar(200)"/>
            <column name="postal_code" type="varchar(10)"/>
            <column name="street" type="varchar(200)"/>
            <column name="city" type="varchar(200)"/>
            <column name="nip" type="varchar(200)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
