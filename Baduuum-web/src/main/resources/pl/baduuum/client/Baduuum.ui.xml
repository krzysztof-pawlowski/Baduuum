
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:gwt='urn:import:com.google.gwt.user.client.ui' 
	xmlns:res='urn:with:pl.baduuum.client.BaduuumResources'
	xmlns:c="urn:import:pl.baduuum.client.widgets">
	
	
	<ui:with type="pl.baduuum.client.BaduuumResources" field="res">
	</ui:with>

	<gwt:HeaderPanel styleName="{res.style.headerPanel}">
		<gwt:FlowPanel styleName="{res.style.middle}">
			<gwt:HTML>
				test header in div
			</gwt:HTML>
			<gwt:Label text="bla" />
			<gwt:MenuBar title="Account" ui:field="menuBar"
				animationEnabled="true" autoOpen="true">
				<gwt:MenuItem text="HOME" ui:field="buttonHome" />
				<gwt:MenuItem text="CENNIK" ui:field="buttonPrice" />
				<gwt:MenuItem text="GRAFIK" ui:field="buttonCalendar" />
				<gwt:MenuItem text="SALA" ui:field="buttonRoom" />
				<gwt:MenuItem text="REZERWACJA" ui:field="buttonReservation" />
				<gwt:MenuItem text="GALERIA" ui:field="buttonGallery">
							<gwt:MenuBar vertical="true">
								<gwt:MenuItem text="SALA TWIN PEAKS" ui:field="buttonGalleryRoom" />
								<gwt:MenuItem text="BUDOWA SALI" ui:field="buttonGalleryBuild" />
							</gwt:MenuBar>
						</gwt:MenuItem>
				<gwt:MenuItem text="REGULAMIN" ui:field="buttonRegulations" />
				<gwt:MenuItem text="FAQ" ui:field="buttonFQA" />				
				<gwt:MenuItem text="KONTAKT" ui:field="buttonContact" />
			</gwt:MenuBar>

		</gwt:FlowPanel>
		<gwt:FlowPanel ui:field="content" styleName="{res.style.middle}">
			<gwt:Label text="Login" styleName="{res.style.redText}" />
			<gwt:TextBox ui:field="loginBox" res:styleName="style.box" />
			
		</gwt:FlowPanel>
		<gwt:FlowPanel styleName="{res.style.middle}">
			<gwt:HTMLPanel>
				<c:SomeWidget myField="test footer in widget "/>
			</gwt:HTMLPanel>
		</gwt:FlowPanel>
	</gwt:HeaderPanel>
</ui:UiBinder>