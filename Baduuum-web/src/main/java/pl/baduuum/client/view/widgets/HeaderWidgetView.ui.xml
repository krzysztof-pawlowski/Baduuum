<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='resources' type='pl.baduuum.client.StyleResources' />
	<ui:with field='images' type='pl.baduuum.client.ImageResources' />

	<ui:style>

	
	.columnsContainer {
		position: relative;
		margin: .5em;
	}
	
	.leftColumn {
		border: 1px solid #ccc;
		padding: 1.25em;
		margin-bottom: .5em;
	}
	
	.rightColumn {
		border: 1px solid #ccc;
		padding: 1.25em;
	}
	</ui:style>
	<g:HTMLPanel>
		<div>
			<!-- <g:Image resource='{images.logo}' /> -->
			<div class="{style.columnsContainer}">

				<div class="{style.leftColumn}">
					<h2>Left Column (fluid)</h2>
				</div>

				<div class="{style.rightColumn}">
					<h2>Right Column</h2>
				</div>

			</div>
		</div>

	</g:HTMLPanel>

</ui:UiBinder>  