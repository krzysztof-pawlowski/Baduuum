<?xml version='1.0'?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:pl.baduuum.client.view.widgets"

	xmlns:dp="urn:import:com.tractionsoftware.gwt.user.client.ui">

	<ui:with field='images' type='pl.baduuum.client.ImageResources' />
	<ui:with field='res' type='pl.baduuum.client.StyleResources' />

	<g:HTMLPanel>
		<div class="wraper">
			<div class="container">

				<c:HeaderWidgetView ui:field="header" />
				<c:MenuWidgetView ui:field="menu" activeMenuItem="reservation" />

				<div class="row">
					<div class="col-sm-offset-4 col-xs-12 col-lg-4 font-smooth">
						<h4>Zarezerwuj</h4>
						<g:FormPanel ui:field="form">
							<g:HTMLPanel>
								<div class="form-group">
									<g:TextBox styleName="form-control" ui:field="name" />
								</div>
								<div class="form-group">
									<g:TextBox styleName="form-control" ui:field="band" />
								</div>
								<div class="form-group">
									<g:TextBox styleName="form-control" ui:field="email" />
								</div>
								<div class="form-group">
									<g:TextBox styleName="form-control" ui:field="phone" />


								</div>
								<div class="form-group">
									<dp:UTCDateBox styleName="form-control" ui:field="date" />
								</div>
								<div class="form-group">
									<dp:UTCTimeBox styleName="form-control" ui:field="timeStart" />
								</div>
								<div class="form-group">
									<dp:UTCTimeBox styleName="form-control" ui:field="timeEnd" />
								</div>
								<div class="form-group">
									<g:Button text="WyÅ›lij" ui:field="buttonSubmit"
										styleName="btn btn-default" />
								</div>
							</g:HTMLPanel>
						</g:FormPanel>
					</div>

				</div>
				<c:FooterWidgetView ui:field="footer" />
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 