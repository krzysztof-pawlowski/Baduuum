<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:c="urn:import:pl.baduuum.client.view.widgets"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	    
	<ui:with field='res' type='pl.baduuum.client.StyleResources' />

	<g:HTMLPanel>
		<div id="pagewrap">
			<c:HeaderWidgetView ui:field="header" />
			<c:MenuWidgetView ui:field="menu" />

			<div id="contentPrices">
				<table>
					<caption>
						<h3>opcje jednorazowej rezerwacji</h3>
					</caption>
					<thead>
						<tr>
							<th>nazwa</th>
							<th>cena w PLN</th>
						</tr>
					</thead>
					<tbody>

						<tr>
							<td class="cena">pierwsza godzina dla nowych zespołów</td>
							<td width="30%">0 zł</td>
						</tr>

						<tr>
							<td class="cena">cena za godzinę</td>
							<td width="30%">30 zł</td>
						</tr>

						<tr>
							<td class="cena">trzecia godzina i następne</td>
							<td width="30%">20 zł</td>
						</tr>

						<tr>
							<td class="cena">przy przedpłacie przed próbą (najpóźniej 3 dni
								przed)</td>
							<td width="30%">10% rabatu</td>
						</tr>

						<tr>
							<td class="cena">karnet 10h</td>
							<td width="30%">200 zł</td>
						</tr>

					</tbody>
				</table>

			</div>
			<c:FooterWidgetView ui:field="footer" />
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 